#!/usr/bin/perl
#
# $Id$
#
# Format XHTML generated by pod2html (via tidy) for websites
#
# Usage: tidy ... pydoc.html | fix-python-xhtml OUTPUT-FILE
#
# (C) Copyright 2002 Dave Beckett - http://purl.org/net/dajobe/
# University of Bristol
#

use strict;
use File::Basename;

my $progname=basename $0;

my $main_title="Redland RDF Application Framework";

my $doc_title="Python API Reference";

die "USAGE: $progname OUTPUT-FILE\n" if @ARGV < 1;

my($file)=@ARGV;

my($pod_rdf_rel)=($file =~ m%^pod/RDF/%) ? '../' : '';
my($pod_rdf_redland_rel)=($file =~ m%^pod/RDF/Redland/%) ? '' : 'Redland/';

open(OUT, ">$file") or die "$progname: Cannot create $file - $!\n";
open(IN, "-");
while(<IN>) {
  # Sorry, I'm transitional
  s%<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"%<?xml version="1.0" encoding="iso-8859-1"?>%;
  s%^.*"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">%<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">%;

  if(m%<title>(.*?)</title>%) {
    s%<title>(.*?)</title>%<title>$main_title - $doc_title</title>%;
  }

  next if /^<link|meta/i;

  # Links to other modules
  s%<a href="(Redland|string|sys).html">([^<]+)</a>%$2%g;
  # The horrors of guessing urls in text
  s%<a href="http://example.(org|com|net)[^"]*">([^<]+)</a>%$2%g; # "
  # Never leave these in web pages
  s%<a href="file:[^"]+">/[^<]+</a>%%g; # "

  s%RDF.html\#%#%;

  # Bad IDs, who writes this stuff?
  s%<a id="-([^"]+)" name="[^"]+">%<a id="$1" name="$1">%g;
  s%<a href="#-[^"+]">%<a href="#$1">%g;
			    
  if(m%^<body.*>%) {
    print OUT qq{<body bgcolor="#ffffff" text="#000085">\n\n<h1 align="center">$main_title - $doc_title</h1>\n\n};
    next;
  } 

  print OUT <<"EOT" if m%^</body>%;
<hr />

<p>Copyright 2002 <a href="http://purl.org/net/dajobe/">Dave Beckett</a>, <a href="http://www.ilrt.bristol.ac.uk/">Institute for Learning and Research Technology</a>, <a href="http://www.bristol.ac.uk/">University of Bristol</a></p>

EOT

  print OUT;
}
close(IN);
close(OUT);
