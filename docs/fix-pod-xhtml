#!/usr/bin/perl
#
# $Source$
#
# $Id$
#
# Format XHTML generated by pod2html (via tidy) for websites
#
# Usage: pod2html ... MODULE.pm | tidy ... | fix-pod-xhtml OUTPUT-FILE
#
# (C) Copyright 2001 Dave Beckett <Dave.Beckett@bristol.ac.uk>
# University of Bristol
#

use strict;
use File::Basename;

my $progname=basename $0;

my $main_title="Redland RDF Application Framework";

die "USAGE: $progname OUTPUT-FILE\n" if @ARGV < 1;

my $doc_title;

my($file)=@ARGV;

my($pod_rel)=($file =~ m%^pod/RDF/%) ? '../' : '';
my($pod_rdf_rel)=($file =~ m%^pod/RDF/%) ? '' : 'RDF/';

open(OUT, ">$file") or die "$progname: Cannot create $file - $!\n";
open(IN, "-");
while(<IN>) {
  if(m%<title>(.*?)</title>%) {
    $doc_title=$1;
    $doc_title =~ s/^(.*) - Redland (.*) Class$/Perl $1 Class/;
    s%<title>(.*?)</title>%<title>$main_title - $doc_title</title>%;
  }

  next if /^<link|meta/;

  s%<h1>%<h2>%; s%</h1>%</h2>%;
  s%<hr />%%;

  s%href="/docs/pod/RDF/([^"]+)"%href="$pod_rdf_rel$1"%g;
  s%href="/docs/pod/([^"]+)"%href="$pod_rel$1"%g;

  s%^<body>%<body bgcolor="#ffffff" text="#000085">\n\n<h1 align="center">$main_title - $doc_title</h1>\n\n%;

  print OUT <<"EOT" if m%^</body>%;
<hr />

<p>Copyright 2001 <a href="http://purl.org/net/dajobe/">Dave Beckett</a>, <a href="http://www.ilrt.bristol.ac.uk/">Institute for Learning and Research Technology</a>, <a href="http://www.bristol.ac.uk/">University of Bristol</a></p>

<p><a href="http://www.mirror.ac.uk/services/validator/check/referer">Validate me</a></p>
EOT
  print OUT;
}
